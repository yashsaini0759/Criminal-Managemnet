// tsconfig.json (at the project root) - FINAL
{
  "include": [
    "client/src/**/*",
    "shared/**/*",
    "server/src/**/*"
, "server/schema.ts"  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    
    // Silences the 'baseUrl' deprecation warning
    "ignoreDeprecations": "6.0", 
    
    // Path resolution is CRITICAL for @shared/*
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "references": [
    { "path": "./client" },
    { "path": "./server" }
  ]
}